<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><%= listing.title %></h3>
        </div>
    </div>
    
    
    
    <div class="card col-6 offset-2">
        <img src="<%= listing.image %>>" class="card-img-top show-img"  alt="listing_image">
  <div class="card-body">
    <p class="card-text">
        <%= listing.description %> <br>

        â‚¹<%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.country %> <br>
        <%= listing.location %>
    </p>
  </div>
    </div>
    <br/>
    <div class="row">
        <div class="card col-6 offset-2" style="display: block;">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit this Listing</a>
            <a href="/listings/<%= listing._id %>/delete" class="btn btn-dark">Delete this Listing</a>
        </div>

    </div>

    <div class="col-8 offset-2 my-3">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" class="mb-3 needs-validation" method="POST" novalidate>
            <div class="my-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="my-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea  cols="30" rows="5" id="comment" name="review[comment]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please Submit some comments for review</div>
            </div>
            <button class="btn btn-outline-dark my-2">Submit</button>
        </form>
        <hr/>
        <h4>All Reviews</h4>
    
     
        
        
    
         <div class="row">
            <% for (const review of listing.reviews) { %>
                <div class="listing-card col-md-6 ms-3 mb-3" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= listing.title %></h5>
                      <p class="card-text"><%= review.comment %></p>
                      <div class="d-flex" style="justify-content: space-between;">
                        <p class="card-text"><%= review.rating %> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                          </svg></p>
                          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                    <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                                  </svg>
                            </button>
                           
                        </form>
                      </div>
                      
                    </div>
                   
                  </div>
            <% } %>
         </div>
    
        
    </div>

    

  
 

    
 

</body>